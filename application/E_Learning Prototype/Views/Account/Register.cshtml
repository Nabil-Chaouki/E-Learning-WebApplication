@model E_Learning_Prototype.Models.RegisterViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>AdminLTE 3 | Registration Page</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">

    @Styles.Render("~/Content/css")

    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
</head>
<body class="hold-transition register-page">
    <div class="register-box">
        <div class="register-logo">
            <a href="../../index2.html"><b>Admin</b>LTE</a>
        </div>

        <div class="card">
            <div class="card-body register-card-body">
                <p class="login-box-msg">Inscription</p>

                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(x => x.First_Name, new { type = "text", @class = "form-control", placeholder = "Prenom" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(x => x.Last_Name, new { type = "text", @class = "form-control", placeholder = "Nom" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(x => x.Email, new { type = "Email", @class = "form-control", placeholder = "Email" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(x => x.Password, new { type = "password", @class = "form-control", placeholder = "mot de passe" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    <div class="input-group mb-3">
                        @Html.TextBoxFor(x => x.Confirm_Password, new { type = "password", @class = "form-control", placeholder = "Confirmer le mot de passe" })
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="custom-control custom-radio">
                            @Html.RadioButtonFor(x => x.isStudent, true,new {@class="custom-control-input",type="radio",id="customRadio1",@checked=true })
                            <label for="customRadio1" class="custom-control-label">Élève</label>
                        </div>
                        <div class="custom-control custom-radio">
                            @Html.RadioButtonFor(x => x.isStudent, false, new { @class = "custom-control-input", type = "radio", id = "customRadio2" })
                            <label for="customRadio2" class="custom-control-label">Enseignant</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-8">
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">S'inscrire</button>
                        </div>
                        <!-- /.col -->
                    </div>
                }
                @Html.ActionLink("Retour", "Login", null, new { @class = "text-center" })
            </div>
            <!-- /.form-box -->
        </div><!-- /.card -->
    </div>
    <!-- /.register-box -->
    @Scripts.Render("~/bundles/jquery")
    <!-- Bootstrap 4 -->
    @*<script src="plugins/bootstrap/js/bootstrap.bundle.min.js"></script>*@
    @Scripts.Render("~/bundles/bootstrap")
    <!-- AdminLTE App -->
    @*<script src="dist/js/adminlte.min.js"></script>*@
    @Scripts.Render("~/bundles/adminlte")
</body>
</html>
